<?xml version="1.0"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="imio.project.pst">

    <assignment remove="True"
                name="navigation"
                category="context"
                key="/"
                manager="plone.leftcolumn"
                type="portlets.Navigation" />

    <assignment remove="True"
                name="news"
                category="context"
                key="/"
                manager="plone.rightcolumn"
                type="portlets.News" />

    <assignment remove="True"
                name="events"
                category="context"
                key="/"
                manager="plone.rightcolumn"
                type="portlets.Events" />

    <assignment remove="True"
                name="portlet_mainimioprojectpst"
                category="context"
                key="/"
                manager="plone.leftcolumn"
                type="imioprojectpst.portlet.main"
                insert-before="navigation" />

    <assignment name="portlet_dashboard"
                category="context"
                key="/pst"
                manager="plone.leftcolumn"
                type="imio.dashboard.FacetedCollectionPortlet" />

    <assignment name="navigation"
                category="context"
                key="/pst"
                manager="plone.leftcolumn"
                type="portlets.Navigation"
                insert-after="portlet_dashboard">
        <property name="name">Navigation</property>
        <property name="root">/pst</property>
        <property name="includeTop">False</property>
        <property name="currentFolderOnly">False</property>
        <property name="topLevel">0</property>
        <property name="bottomLevel">0</property>
    </assignment>

</portlets>
