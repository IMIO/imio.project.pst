<?xml version="1.0"?>
<dc-workflow workflow_id="pst_action_workflow"
             title="PST action workflow"
             state_variable="review_state"
             initial_state="created"
             xmlns:i18n="http://xml.zope.org/namespaces/i18n"
             i18n:domain="plone">
 <permission>View</permission>
 <permission>Modify portal content</permission>
 <permission>Delete objects</permission>
 <permission>Review portal content</permission>
 <permission>Access contents information</permission>
 <state state_id="created"
        title="created"
        i18n:attributes="title">
  <exit-transition transition_id="set_to_be_scheduled"/>
  <exit-transition transition_id="stop"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="Delete objects"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>Editor</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
  </permission-map>
  <permission-map name="Review portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="View"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
 </state>
 <state state_id="ongoing"
        title="ongoing"
        i18n:attributes="title">
  <exit-transition transition_id="finish"/>
  <exit-transition transition_id="back_to_be_scheduled"/>
  <exit-transition transition_id="stop"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="Delete objects"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>Editor</permission-role>
  </permission-map>
  <permission-map name="Review portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="View"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
 </state>
 <state state_id="stopped"
        title="stopped"
        i18n:attributes="title">
  <exit-transition transition_id="back_to_created"/>
  <exit-transition transition_id="back_to_be_scheduled"/>
  <exit-transition transition_id="back_to_ongoing"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="Delete objects"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>Editor</permission-role>
  </permission-map>
  <permission-map name="Review portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="View"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
 </state>
 <state state_id="terminated"
        title="terminated"
        i18n:attributes="title">
  <exit-transition transition_id="back_to_ongoing"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="Delete objects"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Review portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="View"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
 </state>
 <state state_id="to_be_scheduled"
        title="to_be_scheduled"
        i18n:attributes="title">
  <exit-transition transition_id="back_to_created"/>
  <exit-transition transition_id="begin"/>
  <exit-transition transition_id="stop"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="Delete objects"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>Editor</permission-role>
  </permission-map>
  <permission-map name="Review portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="View"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
 </state>
 <transition transition_id="back_to_be_scheduled"
             title="back_to_be_scheduled"
             new_state="to_be_scheduled"
             trigger="USER"
             before_script=""
             after_script=""
             i18n:attributes="title">
  <action url="" category="workflow" i18n:translate="">back_to_be_scheduled</action>
  <guard>
    <guard-permission>Review portal content</guard-permission>
  </guard>
 </transition>
 <transition transition_id="back_to_created"
             title="back_to_created"
             new_state="created"
             trigger="USER"
             before_script=""
             after_script=""
             i18n:attributes="title">
  <action url="" category="workflow" i18n:translate="">back_to_created</action>
  <guard>
    <guard-permission>Review portal content</guard-permission>
  </guard>
 </transition>
 <transition transition_id="back_to_ongoing"
             title="back_to_ongoing"
             new_state="ongoing"
             trigger="USER"
             before_script=""
             after_script=""
             i18n:attributes="title">
  <action url="" category="workflow" i18n:translate="">back_to_ongoing</action>
  <guard>
    <guard-permission>Review portal content</guard-permission>
  </guard>
 </transition>
 <transition transition_id="begin"
             title="begin"
             new_state="ongoing"
             trigger="USER"
             before_script=""
             after_script=""
             i18n:attributes="title">
  <action url="" category="workflow" i18n:translate="">begin</action>
  <guard>
    <guard-permission>Review portal content</guard-permission>
  </guard>
 </transition>
 <transition transition_id="finish"
             title="finish"
             new_state="terminated"
             trigger="USER"
             before_script=""
             after_script=""
             i18n:attributes="title">
  <action url="" category="workflow" i18n:translate="">finish</action>
  <guard>
    <guard-permission>Review portal content</guard-permission>
  </guard>
 </transition>
 <transition transition_id="set_to_be_scheduled"
             title="set_to_be_scheduled"
             new_state="to_be_scheduled"
             trigger="USER"
             before_script=""
             after_script=""
             i18n:attributes="title">
  <action url="" category="workflow" i18n:translate="">set_to_be_scheduled</action>
  <guard>
    <guard-permission>Review portal content</guard-permission>
  </guard>
 </transition>
 <transition transition_id="stop"
             title="stop"
             new_state="stopped"
             trigger="USER"
             before_script=""
             after_script=""
             i18n:attributes="title">
  <action url="" category="workflow" i18n:translate="">stop</action>
  <guard>
    <guard-permission>Review portal content</guard-permission>
  </guard>
 </transition>
 <variable variable_id="action" for_catalog="False"
           for_status="True" update_always="True">
  <description>The last transition</description>
  <default>
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False"
           for_status="True" update_always="True">
  <description>The ID of the user who performed the last transition</description>
  <default>
   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False"
           for_status="True" update_always="True">
  <description>Comments about the last transition</description>
  <default>
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False"
           for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False"
           for_status="True" update_always="True">
  <description>Time of the last transition</description>
  <default>
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
<!-- ##code-section FOOT -->
<!-- ##/code-section FOOT -->
 <!-- We dont use workflow scripts any more, we use subscribers -->
</dc-workflow>
