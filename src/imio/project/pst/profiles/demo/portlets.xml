<?xml version="1.0"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="imio.project.pst">

    <assignment name="portlet_dashboard" remove="True"
                category="context"
                key="/pst"
                manager="plone.leftcolumn"
                type="FacetedCollectionPortlet" />

    <assignment name="navigation" remove="True"
                category="context"
                key="/pst"
                manager="plone.leftcolumn"
                type="portlets.Navigation"
                insert-after="portlet_dashboard">
        <property name="name">Navigation</property>
        <property name="root">/pst</property>
        <property name="includeTop">False</property>
        <property name="currentFolderOnly">False</property>
        <property name="topLevel">0</property>
        <property name="bottomLevel">0</property>
    </assignment>
</portlets>
