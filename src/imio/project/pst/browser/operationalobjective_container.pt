<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="imio.project.pst">
<body>

<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core">

    <tal:block repeat="widget view/widgets/values">
        <div class="field" tal:condition="python:widget.__name__ not in ('IBasic.title', 'IBasic.description', 'title', 'description',)">
            <label tal:content="widget/label" />
            <br />
        </div>
        <div class="field_value" tal:content="structure widget/render" />
    </tal:block>

    <fieldset tal:repeat="group view/groups"
              tal:attributes="id python:''.join((group.prefix, 'groups.', group.__name__)).replace('.', '-')">
        <legend tal:content="group/label" />
        <div class="field" tal:repeat="widget group/widgets/values">
            <label tal:content="widget/label" />
            <br />
            <div tal:content="structure widget/render" />
        </div>
    </fieldset>

    <div class="visualClear"></div>
    <fieldset id="folder-listing" tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;">
        <legend i18n:translate="operational_legend_actions">Actions</legend>
        <table class="listing">
            <tr>
                <th class='operational_actions_header_title' i18n:translate="" i18n:domain="plone">Title</th>
                <th class='operational_actions_header_description' i18n:translate="" i18n:domain="plone">Description</th>
                <th class='operational_actions_header_planned_end_date' i18n:translate="" i18n:domain="imio.project.core">Planned end date</th>
                <th class='operational_actions_header_progress' i18n:translate="" i18n:domain="imio.project.core">Progress</th>
                <th class='operational_actions_header_health_indicator' i18n:translate="">Health indicator</th>
                <th class='operational_actions_header_manager' i18n:translate="" i18n:domain="imio.project.core">Manager</th>
            </tr>
            <tr tal:repeat="renderedAction context/getRenderedActions">
                <tal:defines define="action python: renderedAction.context;
                                     widgets renderedAction/widgets;">
                <td><a href="#" tal:content="action/title" tal:attributes="href action/absolute_url">Action title</a></td>
                <td tal:content="action/Description">Description</td>
                <td tal:content="structure python: widgets.get('planned_end_date').render()">Planned end date</td>
                <td tal:content="structure python: widgets.get('progress').render() + ' %'">Progress indicator</td>
                <td tal:content="structure python: widgets.get('health_indicator').render()"
                    tal:attributes="class string:health_indicator_color_${action/health_indicator}">Health indicator</td>
                <td tal:content="structure python: widgets.get('manager').render()">Manager</td>
                </tal:defines>
            </tr>
        </table>
    </fieldset>
  </metal:content-core>
</metal:main>

</body>
</html>
