<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="imio.project.pst">
<body>

<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core">

    <table class="no-style-table" width="100%">
        <tr tal:repeat="widget view/widgets/values">
            <td class="table_widget_label"><label tal:content="widget/label">Label</label></td>
            <td class="table_widget_value" tal:content="structure widget/render">Value</td>
        </tr>
    </table>

    <fieldset tal:repeat="group view/groups"
              tal:attributes="id python:''.join((group.prefix, 'groups.', group.__name__)).replace('.', '-')">
        <legend tal:content="group/label" />
        <table class="no-style-table" width="100%">
            <tr tal:repeat="widget group/widgets/values">
                <td class="table_widget_label"><label tal:content="widget/label">Label</label></td>
                <td class="table_widget_value" tal:content="structure widget/render">Value</td>
            </tr>
        </table>
    </fieldset>

    <div class="visualClear"></div>

    <tal:block define="imio_folder_listing context/@@imio-folder-listing/index;">
        <tal:content replace="structure imio_folder_listing" />
    </tal:block>

    <fieldset id="folder-listing">
        <legend i18n:translate="" i18n:domain="imio.project.pst">Annexes</legend>
        <tal:block define="listing_macro context/folder_listing/macros/listing;
                           contentFilter python: {'portal_type': 'File'};">
            <metal:use_macro use-macro="listing_macro" />
        </tal:block>
    </fieldset>

  </metal:content-core>
</metal:main>

</body>
</html>
